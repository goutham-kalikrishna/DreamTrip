<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="300sp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/vMore"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/morev"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:background="#ffffff"/>
            <LinearLayout
                android:id="@+id/LiLayout1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80sp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="5sp"
                    android:id="@+id/user_profile_photo1"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:background="@drawable/profile_circular_border_imageview"
                    android:elevation="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pranay2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:layout_alignLeft="@id/user_profile_photo1">
                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="3"
                        android:layout_marginTop="15sp"
                        android:paddingLeft="10sp"
                        android:textSize="16sp"
                        android:textColor="#46b6ea"
                        android:text="Pranay Narne"
                        />
                    <TextView
                        android:id="@+id/timePosted1"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="3"
                        android:paddingLeft="10sp"
                        android:textSize="12sp"
                        android:textColor="#46b6ea"
                        android:text="     12hrs ago"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lol11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8"
                android:layout_below="@+id/LiLayout1">
                <TextView
                    android:id="@+id/blogTitle1"
                    android:ellipsize="end"
                    android:layout_width="0sp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_marginBottom="10sp"
                    android:textStyle="bold"
                    android:textColor="#5b5858"
                    android:text="Feel the Beauty of Nature" />
                <ImageView
                    android:layout_marginTop="10sp"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:src="@drawable/slike"
                    android:scaleType="center"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/LikeValue1"
                    android:layout_width="0sp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#a98e8e"
                    android:text="81 likes"
                    android:gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/blogText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lol11"
                android:background="#ffffff"
                android:paddingLeft="10sp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#8e8b8b"
                android:text="Welcome to shimla"
                android:minLines="1"
                android:layout_marginBottom="5sp"
                android:ellipsize="end"
                android:maxLines="6"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#eddcdc"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                android:layout_above="@+id/lol1"
                android:layout_marginRight="20sp"/>
            <LinearLayout
                android:id="@+id/lol1"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:weightSum="3"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/likeR1"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:elevation="2sp"
                    android:paddingLeft="30sp"
                    android:text="Like"
                    android:textAllCaps="false"
                    android:textColor="#b79e9c"
                    android:drawableLeft="@drawable/like"/>
                <Button
                    android:id="@+id/ShareR1"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:elevation="2sp"
                    android:paddingLeft="30sp"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:textColor="#b79e9c"
                    android:drawableLeft="@drawable/share"/>
                <Button
                    android:id="@+id/ReadmoreR1"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:elevation="2sp"
                    android:paddingLeft="30sp"
                    android:text="Visit"
                    android:textAllCaps="false"
                    android:textColor="#b79e9c"
                    android:drawableLeft="@drawable/delete"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>