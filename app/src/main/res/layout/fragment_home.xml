<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.travelapp.Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wish">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FROM"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/source_etxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="source"
                        android:textSize="20sp"
                        android:textColorHint="#AA000000"
                        android:layout_weight="3"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:textColor="#AA000000"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="60dp"
                        android:text="Delhi"
                        />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="20sp"
                        android:id="@+id/to_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TO"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView
                        android:textSize="20sp"
                        android:text="Manali"
                        android:textColorHint="#AA000000"
                        android:id="@+id/destination_etxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Destiation"
                        android:layout_weight="3"
                        android:textColor="#AA000000"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="60dp"
                        />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    >

                    <TextView
                        android:textSize="20sp"
                        android:id="@+id/depDate_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure"
                        android:textColor="#000000"/>
                    <!--<TextView-->
                    <!--android:id="@+id/deptDate_txt"-->
                    <!--android:layout_below="@+id/depDate_lbl"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="27-08-17"/>-->

                    <EditText
                        android:id="@+id/deptDate_etxt"
                        android:textSize="25sp"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minEms="5"
                        android:textColor="#AA000000"
                        android:hint="YYYYMMDD"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/depDate_lbl"/>

                    <TextView
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:id="@+id/ReturnDate_lbl"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Return"
                        android:layout_marginRight="30dp"/>
                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->

                    <EditText
                        android:textSize="25sp"
                        android:textColor="#AA000000"
                        android:id="@+id/returnDate_txt"
                        android:layout_below="@+id/ReturnDate_lbl"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minEms="5"
                        android:layout_marginTop="10dp"
                        android:hint="YYYYMMDD"
                        />
                </RelativeLayout>
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/passengers"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passengers"
                    android:textColor="#000000"/>
                <!--<TextView-->
                <!--android:id="@+id/deptDate_txt"-->
                <!--android:layout_below="@+id/depDate_lbl"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="27-08-17"/>-->

                <EditText
                    android:id="@+id/passengers_etxt"
                    android:textSize="25sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="5"
                    android:textColor="#AA000000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/depDate_lbl"
                    android:inputType="number"/>

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:text="Submit"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF0000"
                    android:backgroundTintMode="src_atop"
                    android:onClick="submitBtn"
                    />

            </LinearLayout>

        </RelativeLayout>
</FrameLayout>
