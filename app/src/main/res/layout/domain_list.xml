<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:background="#fcdcdc"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/HotelImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/HotelName"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="#50111111"
                android:paddingLeft="10sp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="Hi"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">
    <TextView
        android:id="@+id/hotelrating"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="Rating :3.2"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/selectHotel"
        android:layout_height="40sp" />
    <TextView
        android:id="@+id/hotelprice"
        android:background="#f91818"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="  Price :10000 Inr"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#fbff00"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="40sp" />
        <CheckBox
            android:background="#938282"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:id="@+id/selectHotel"
            />
    </RelativeLayout>



</LinearLayout>